<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.desafioandroid.desafioandroid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.MostraRevistaActivity"
            android:label="@string/title_activity_mostra_revista"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".view.PrincipalActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.DetalhesPersonagemActivity" />
        <activity android:name=".view.BuscaPersonagemActivity" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>